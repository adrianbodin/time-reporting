@page
@model TimeReporting.Pages.Employees.Edit

<section class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h1 class="card-title text-center mb-4">Edit Employee</h1>
          <form method="post">
            <div class="form-floating mb-3">
              <input asp-for="Employee.FullName" class="form-control" placeholder="Full Name"/>
              <label asp-for="Employee.FullName"></label>
              <span asp-validation-for="Employee.FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
              <input asp-for="Employee.Email" class="form-control" placeholder="Email"/>
              <label asp-for="Employee.Email"></label>
              <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
              <input asp-for="Employee.PhoneNumber" class="form-control" placeholder="Phone Number"/>
              <label asp-for="Employee.PhoneNumber"></label>
              <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
              <input asp-for="Employee.HireDate" class="form-control" placeholder="Hire Date"/>
              <label asp-for="Employee.HireDate"></label>
              <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check2-circle me-2"></i>Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
