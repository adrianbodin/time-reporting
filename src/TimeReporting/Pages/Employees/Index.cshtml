@page
@using Humanizer
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    Layout = "_Layout";
}

<section class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="m-0">Employees</h1>
    <a
      asp-page="Create"
      up-layer="new modal"
      up-position="right"
      up-history="false"
      up-accept-location="/Employees"
      up-on-accepted="up.reload('.employees')"
      class="btn btn-primary d-flex align-items-center gap-2">
      <i class="bi bi-plus-lg"></i>
      <span>New Employee</span>
    </a>
  </div>

  <div class="employees">
    @if(!Model.Employees.Any())
    {
      <div class="text-center py-5">
        <i class="bi bi-people display-1 text-muted mb-3"></i>
        <h3 class="h4 text-muted">No employees found</h3>
        <p class="text-muted mb-3">Get started by adding your first employee</p>
        <a
          asp-page="Create"
          up-layer="new modal"
          up-position="right"
          up-history="false"
          up-accept-location="/Employees"
          up-on-accepted="up.reload('.employees')"
          class="btn btn-primary">
          <i class="bi bi-plus-lg me-2"></i>Add Employee
        </a>
      </div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead>
            <tr class="text-muted small text-uppercase">
              <th class="fw-medium ps-0">Employee Name</th>
              <th class="fw-medium">Job Title</th>
              <th class="fw-medium">Hire Date</th>
              <th class="text-end pe-0"></th>
            </tr>
          </thead>
          <tbody class="border-top">
            @foreach (var employee in Model.Employees)
            {
              <tr>
                <td class="ps-0" style="min-width: 300px;">
                  <a asp-page="./Details"
                     up-follow
                     asp-route-id="@employee.Id"
                     class="text-decoration-none fw-medium">@employee.FullName</a>
                </td>
                <td>
                  @employee.JobTitle
                </td>
                <td>
                  @employee.HireDate.ToString("MMM dd, yyyy")
                </td>
                <td class="text-end pe-0">
                  <div class="d-flex gap-2 justify-content-end">
                    <a asp-page="./Edit"
                       asp-route-id="@employee.Id"
                       up-layer="new drawer"
                       up-position="right"
                       class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-pencil"></i>
                      <span class="d-none d-md-inline ms-1">Edit</span>
                    </a>
                    <a asp-page="./Details"
                       asp-route-id="@employee.Id"
                       up-follow
                       class="btn btn-sm btn-outline-secondary">
                      <i class="bi bi-eye"></i>
                      <span class="d-none d-md-inline ms-1">Details</span>
                    </a>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }
  </div>
</section>