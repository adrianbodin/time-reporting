@page
@model TimeReporting.Pages.Projects.IndexModel

@{
    Layout = "_Layout";
}

<section class="container mt-3">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="m-0">Projects</h1>
    <div class="d-flex gap-3">
      <form
        method="get"
        up-target=".projects"
        up-history="true"
        up-autosubmit
        up-watch-event='input'
        up-watch-delay=500>
        <div class="input-group">
          <span class="input-group-text border-end-0">
            <i class="bi bi-search"></i>
          </span>
          <input
            type="text"
            asp-for="SearchTerm"
            class="form-control border-start-0"
            placeholder="Search projects..."
            aria-label="Search projects">
        </div>
      </form>
      <a
        asp-page="Create"
        up-layer="new modal"
        up-position="right"
        up-history="false"
        up-accept-location="/Projects"
        up-on-accepted="up.reload('.projects')"
        class="btn btn-primary d-flex align-items-center gap-2">
        <i class="bi bi-plus-lg"></i>
        <span>New Project</span>
      </a>
    </div>
  </div>

  <div class="projects">
    @if (!Model.Projects.Any())
    {
      <div class="text-center py-5">
        <i class="bi bi-kanban display-1 text-muted mb-3"></i>
        <h3 class="h4 text-muted">No projects found</h3>
        <p class="text-muted mb-3">Get started by creating your first project</p>
        <a
          asp-page="Create"
          up-layer="new modal"
          up-position="right"
          up-history="false"
          up-accept-location="/Projects"
          up-on-accepted="up.reload('.projects')"
          class="btn btn-primary">
          <i class="bi bi-plus-lg me-2"></i>Create Project
        </a>
      </div>
    }
    else
    {
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
          <tr>
            <th>Project Name</th>
            <th>Customer</th>
            <th>Total Hours</th>
            <th></th>
          </tr>
          </thead>
          <tbody class="border-top">
          @foreach (var project in Model.Projects)
          {
            var totalHours = project.TimeEntries.Sum(t => t.Hours);

            <tr>
              <td class="ps-0">
                <a asp-page="./Details"
                   up-follow
                   asp-route-id="@project.Id"
                   class="text-decoration-none fw-medium">@project.Name</a>
              </td>
              <td>
                @project.Customer.Name
              </td>
              <td>
                <span>@totalHours.ToString("F1")h</span>
              </td>
              <td class="text-end pe-0">
                <div class="d-flex gap-2 justify-content-end">
                  <a asp-page="./Edit"
                     asp-route-id="@project.Id"
                     up-layer="new drawer"
                     up-position="right"
                     up-accept-location="/Projects"
                     up-on-accepted="up.reload('.projects')"
                     up-history="false"
                     class="btn btn-sm btn-outline-primary"
                     title="Edit Project">
                    <i class="bi bi-pencil"></i>
                  </a>
                  <a asp-page="./Details"
                     asp-route-id="@project.Id"
                     up-follow
                     class="btn btn-sm btn-outline-secondary"
                     title="View Details">
                    <i class="bi bi-eye"></i>
                  </a>
                </div>
              </td>
            </tr>
          }
          </tbody>
        </table>
      </div>
    }
  </div>
</section>