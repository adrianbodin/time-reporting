@page "/tid"
@model EntreprenadPro.Pages.Tid.Index

<section class="mt-3">
  <div class="row g-3 align-items-center mb-4">
    <div class="col-12 col-sm-6 col-md-4 col-lg-6">
      <form method="get" up-target="main" up-history="true" up-autosubmit>
        <div class="row">
          <div class="col-6">
            <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="bi bi-calendar3"></i>
            </span>
              <input
                data-testid="date-input"
                asp-for="SelectedDate"
                class="form-control"
                aria-label="Select date"/>
            </div>
          </div>
          <div class="col-6">
            <div class="input-group">
            <span class="input-group-text">
              <i class="bi bi-kanban"></i>
            </span>
              <select
                asp-for="SelectedProjectId"
                asp-items="Model.Projects"
                class="form-select"
                aria-label="Select project">
                <option value="">Alla projekt</option>
              </select>
            </div>
          </div>
        </div>
      </form>
    </div>
    <div class="col-12 col-sm-6 col-md-8 col-lg-6 d-flex justify-content-end">
      <a href="/tid/skapa"
         up-layer="new modal"
         up-accept-location="/tid"
         up-history="false"
         up-on-accepted="up.reload('.entries')"
         up-position="right"
         class="btn btn-primary">
        <i class="bi bi-plus-lg me-2 text-light"></i>
        <span>LÃ¤gg till</span>
      </a>
    </div>
  </div>
  <div class="entries">
    <partial name="_TimeEntryCards" model="Model"/>
  </div>
</section>