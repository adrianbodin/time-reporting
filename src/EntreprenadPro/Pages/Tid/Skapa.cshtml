@page
@using EntreprenadPro.Helpers
@model EntreprenadPro.Pages.Tid.Skapa

<section class="container">
  <h1>Ny tidrapport</h1>
  <hr>
  <form method="post" up-target=".entries" class="add-entry-form" up-submit>
    <div class="mb-3">
      <label asp-for="NewEntry.TimeEntryType" class="form-label">Typ av tid</label>
      <select asp-for="NewEntry.TimeEntryType" class="form-select" up-switch=".type-dependant"
              asp-items="@EnumHelper.GetSelectList<TimeEntryType>()">
      </select>
    </div>

    <div class="mb-3 type-dependant" up-show-for="@TimeEntryType.Debitable">
      <label asp-for="NewEntry.ProjectId" class="form-label">Projekt</label>
      <div class="mb-3 input-group">
        <select asp-for="NewEntry.ProjectId" class="form-select project-selection">
          <option value="">Välj ett projekt</option>
          @foreach (var project in Model.Projects)
          {
            <option value="@project.Id">@project.Name</option>
          }
        </select>
        <a
          class="btn btn-outline-secondary rounded-end"
          href="/Projekt/Skapa"
          up-layer="new modal"
          up-history="false"
          up-accept-location="/Projekt"
          up-on-accepted="up.reload('.project-selection')">
          Ny
        </a>
      </div>
      <span class="text-danger" asp-validation-for="NewEntry.ProjectId"></span>
    </div>
    <div class="row g-3 mb-3 w-100">
      <div class="col-auto">
        <label asp-for="NewEntry.Hours" class="form-label">Antal timmar
          <input type="number" min="0" step="0.5" asp-for="NewEntry.Hours" class="form-control"/>
        </label>
        <span class="text-danger" asp-validation-for="NewEntry.Hours"></span>
      </div>
      <div class="col-auto">
        <label asp-for="NewEntry.WorkTypeId" class="form-label">Work type
          <select asp-for="NewEntry.WorkTypeId" class="form-select work-type-selection">
            <option value="">Välj en arbetstyp</option>
            >
            @foreach (var workType in Model.WorkTypes)
            {
              <option value="@workType.Id">@workType.Name</option>
            }
          </select>
        </label>
      </div>
      <div class="col-auto">
        <label asp-for="NewEntry.Date" class="form-label">Datum
          <input asp-for="NewEntry.Date" class="form-control"/>
        </label>
        <span class="text-danger" asp-validation-for="NewEntry.Date"></span>
      </div>
    </div>
    <div>
      <label asp-for="NewEntry.Description" class="form-label">Beskrivning
        <textarea asp-for="NewEntry.Description" rows="7" cols="100" class="form-control"></textarea>
      </label>
      <span class="text-danger" asp-validation-for="NewEntry.Description"></span>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Lägg till</button>
  </form>
</section>