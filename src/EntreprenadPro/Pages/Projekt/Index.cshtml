@page
@model EntreprenadPro.Pages.Projects.IndexModel

<section>
  <div class="d-flex flex-column gap-3 mb-4">
    <form
      method="get"
      role="search"
      aria-label="Sök i projekt"
      up-target=".projects"
      up-history="true"
      up-autosubmit
      up-watch-event="input"
      up-watch-delay="500">
      <div class="input-group">
        <span class="input-group-text border-end-0 fs-4" aria-hidden="true">
          <i class="bi bi-search" aria-hidden="true"></i>
        </span>
        <label for="SearchTerm" class="visually-hidden">Sök projekt</label>
        <input
          type="search"
          asp-for="SearchTerm"
          class="form-control border-start-0 fs-4"
          placeholder="Sök projekt…"
          aria-label="Sök projekt"
          aria-controls="projectsList"
          inputmode="search">
      </div>
    </form>
    <div class="d-grid">
      <a
        href="/Projekt/Skapa"
        up-layer="new modal"
        up-position="right"
        up-history="false"
        up-accept-location="/Projekt"
        up-on-accepted="up.reload('.projects')"
        class="btn btn-primary btn-lg d-flex align-items-center justify-content-center"
        aria-label="Lägg till nytt projekt">
        <i class="bi bi-plus-lg text-light fs-3" aria-hidden="true"></i>
      </a>
    </div>
  </div>

  <div class="projects"
       aria-live="polite"
       up-on-loading="this.setAttribute('aria-busy','true')"
       up-on-loaded="this.removeAttribute('aria-busy')">
    @if (!Model.Projects.Any())
    {
      <div class="text-center py-5" role="status" aria-live="polite">
        <i class="bi bi-kanban display-1 text-muted mb-3" aria-hidden="true"></i>
        <h3 class="h4 text-muted">Inga projekt hittades</h3>
        <p class="text-muted mb-3">Börja med att skapa ditt första projekt</p>
        <a
          href="/projekt/skapa"
          up-layer="new modal"
          up-position="right"
          up-history="false"
          up-accept-location="/Projekt"
          up-on-accepted="up.reload('.projects')"
          class="btn btn-primary"
          aria-label="Lägg till nytt projekt">
          <i class="bi bi-plus-lg me-2" aria-hidden="true"></i>
          Lägg till
        </a>
      </div>
    }
    else
    {
      <div id="projectsList" class="row g-4">
        @foreach (var project in Model.Projects)
        {
          var totalHours = project.TimeEntries.Sum(t => t.Hours);
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
              <a asp-page="Details/Index"
                 up-follow
                 up-transition="move-left"
                 asp-route-id="@project.Id"
                 class="text-decoration-none text-reset card-body d-flex flex-column h-100"
                 style="cursor: pointer;">
                <h5 class="card-title fw-medium">
                  @project.Name
                </h5>
                <div class="mb-2">
                  <small class="text-muted">Kund:</small>
                  <p class="mb-1">@project.Customer?.Name</p>
                </div>
                <div class="mb-3">
                  <small class="text-muted">Totala timmar:</small>
                  <p class="mb-0">
                    <span aria-label="@totalHours.ToString("F1") timmar">
                      @totalHours.ToString("F1")<span class="visually-hidden"> timmar</span>h
                    </span>
                  </p>
                </div>
              </a>
            </div>
          </div>
        }
      </div>
    }
  </div>
</section>
