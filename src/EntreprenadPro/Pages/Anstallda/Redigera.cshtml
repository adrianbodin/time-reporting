@page
@model EntreprenadPro.Pages.Anstallda.RedigeraModel

<section>
  <h2>Redigera anställd</h2>
  <hr>
  <form method="post" up-submit>
    <input type="hidden" asp-for="Employee.Id"/>
    <div class="form-group mb-3">
      <label asp-for="Employee.FullName" class="form-label"></label>
      <input asp-for="Employee.FullName" class="form-control" placeholder="Fullständigt namn"/>
      <span asp-validation-for="Employee.FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
      <label asp-for="Employee.JobTitle" class="form-label"></label>
      <input asp-for="Employee.JobTitle" class="form-control" placeholder="Jobbtitel"/>
      <span asp-validation-for="Employee.JobTitle" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
      <label asp-for="Employee.PhoneNumber" class="form-label"></label>
      <input asp-for="Employee.PhoneNumber" class="form-control" placeholder="Telefonnummer"/>
      <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
      <label asp-for="Employee.HireDate" class="form-label"></label>
      <input asp-for="Employee.HireDate" class="form-control" placeholder="Anställningsdatum"/>
      <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Spara</button>
    </div>
  </form>
</section>
