@page
@model EntreprenadPro.Pages.Fordon.IndexModel

<section>
  <div class="d-flex flex-column flex-md-row justify-content-md-between mb-4">
    <div class="row g-2">
      <form
        method="get"
        class="col d-flex"
        role="search"
        aria-label="Sök i fordon"
        up-target=".vehicles"
        up-history="false"
        up-autosubmit
        up-watch-event="input"
        up-watch-delay="500">
        <div class="input-group flex-grow-1">
          <span class="input-group-text border-end-0" aria-hidden="true">
            <i class="bi bi-search" aria-hidden="true"></i>
          </span>
          <label for="SearchTerm" class="visually-hidden">Sök fordon</label>
          <input
            type="search"
            asp-for="SearchTerm"
            class="form-control form-control-lg border-start-0"
            placeholder="Sök…"
            aria-label="Sök fordon"
            aria-controls="vehiclesCards"
            inputmode="search">
        </div>
      </form>
      <div class="col-auto d-flex">
        <a
          href="/Fordon/Skapa"
          up-layer="new modal"
          up-position="right"
          up-history="false"
          up-accept-location="/Fordon"
          up-on-accepted="up.reload('.vehicles')"
          class="btn btn-primary d-flex align-items-center justify-content-center"
          aria-label="Lägg till nytt fordon">
          <i class="bi bi-plus-lg text-light fs-2" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>

  <div class="vehicles"
       aria-live="polite"
       up-on-loading="this.setAttribute('aria-busy','true')"
       up-on-loaded="this.removeAttribute('aria-busy')">
    @if (!Model.Vehicles.Any())
    {
      <div class="text-center py-5" role="status" aria-live="polite">
        <i class="bi bi-truck display-1 text-muted mb-3" aria-hidden="true"></i>
        <h3 class="h4 text-muted">Inga fordon hittades</h3>
        <p class="text-muted mb-3">Börja med att skapa ditt första fordon</p>
        <a
          href="/Fordon/Skapa"
          up-layer="new modal"
          up-position="right"
          up-history="false"
          up-accept-location="/Fordon"
          up-on-accepted="up.reload('.vehicles')"
          class="btn btn-primary"
          aria-label="Lägg till nytt fordon">
          <i class="bi bi-plus-lg me-2" aria-hidden="true"></i>
          Lägg till
        </a>
      </div>
    }
    else
    {
      <div class="row g-2" id="vehiclesCards" role="region" aria-label="Lista över fordon">
        @foreach (var vehicle in Model.Vehicles)
        {
          <div class="col-12 col-md-6 col-lg-4 bg-white:hover">
            <a asp-page="/Fordon/Details/Index"
               asp-route-identifier="@(vehicle.RegistrationNumber ?? vehicle.SerialNumber)"
               class="text-decoration-none"
               aria-label="Visa detaljer för @vehicle.Make @vehicle.Model">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title">@vehicle.Make @vehicle.Model</h5>
                  </div>
                  <p class="card-text text-muted mb-0">
                    <strong>@(vehicle.Type == VehicleType.Car ? "Reg.nr:" : "Serienr:")</strong>
                    @(vehicle.Type == VehicleType.Car ? vehicle.RegistrationNumber : vehicle.SerialNumber)
                  </p>
                </div>
              </div>
            </a>
          </div>
        }
      </div>
    }
  </div>
</section>
