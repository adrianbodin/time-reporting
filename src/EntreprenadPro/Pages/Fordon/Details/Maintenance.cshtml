@page "/Fordon/{identifier}/underhall"
@model EntreprenadPro.Pages.Fordon.Details.MaintenanceModel

@{
  Layout = "Details/_VehicleDetailsLayout";
  ViewData["ActiveLink"] = "Maintenance";
}

<section class="container-fluid px-3 px-md-4 py-3 py-md-4">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <div
            class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2 mb-3">
            <h2 class="h5 card-title mb-0">Underhåll och Service</h2>
            <button class="btn btn-sm btn-primary" disabled>
              <i class="bi bi-plus-lg me-1"></i>
              <span class="d-none d-sm-inline">Lägg till</span>
              <span class="d-inline d-sm-none">Ny</span>
            </button>
          </div>
          <div class="text-center py-5 text-muted">
            <i class="bi bi-tools display-3 display-md-1 mb-3"></i>
            <p class="mb-0">Underhållshistorik kommer snart</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

